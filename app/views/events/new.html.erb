<div class="container">
    <%= form_tag("/events/create") do %>
        <div class="form-group">
            <label for="exampleInputEmail1">イベント名</label>
            <input name="title" class="form-control" id="title" placeholder="イベント名">
        </div>
        <div class="form-group">
            <label for="exampleInputPassword1">言語</label>
            <input name="skill" class="form-control" id="skill" placeholder="(例)C言語">
        </div>
        <div class="form-group">
            <label for="exampleInputPassword1">募集人数</label>
            <input name="accept_num" class="form-control" id="accept_num" placeholder="（例）１〜３人">
        </div>
        <div class="form-group">
            <label for="exampleInputPassword1">説明</label>
            <textarea class="form-control" name="description" id="description" style="height:100px;"></textarea>
        </div>
        <button type="submit" class="btn btn-primary">イベントを作成</button>
    <% end %>
</div>