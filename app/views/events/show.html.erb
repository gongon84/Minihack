<div class="show-page container py-5">

    <%# 戻るボタン %>
    <div class="">
        <%= link_to("戻る", "/events/index", class: "btn btn-primary") %>
    </div>

    <div class="event-show">
        <%# 開始前 %>
        <div class="card mb-3">
            <div class="card-body">
                <% if @event.status == "募集中" %>
                    <h6 class="btn btn-outline-danger"><%= @event.status %></h6>
                <% elsif @event.status == "開催中" %>
                    <h6 class="btn btn-outline-success"><%= @event.status %></h6>
                <% elsif @event.status == "終了" %>
                    <h6 class="btn btn-outline-secondary"><%= @event.status %></h6> 
                <% end %>
                <h5 class="card-title"><%= @event.title %></h5>
                <h6>言語：<%= @event.skill %></h6>
                <h6>募集人数：<%= @event.accept_num %></h6>
                <% if @event.status == "終了" %>
                    <h6>作品URL：<%= link_to("#{@event.portfolio}", "#{@event.url}", target: :_blank)%></h6>
                    <p class="card-text"><%= @event.portfolio_info %></p>
                <% else %>
                    <h6>URl(Zoomなど)：<%= link_to("#{@event.url}", "#{@event.url}", target: :_blank)%></h6>
                    <p class="card-text"><%= @event.description %></p>
                <% end %>
                <div class="d-flex">
                    <%= link_to("編集", "/events/#{@event.id}/edit", class: "mr-2") %>
                    <%= link_to("削除", "/events/#{@event.id}/destroy", method: "post", data: {confirm: '【確認】このイベントを削除してよろしいですか？'}) %>
                    <time datetime="<%= @event.created_at %>", class="ml-auto">
                        <h6 class=""><%= time_ago_in_words(@event.created_at) %>前</h6>
                    </time>
                </div>
            </div>
        </div>

        <%# twitterシェアボタン %>
        <%= link_to "https://twitter.com/share?url=#{request.url}&text=#{@event.title}を開催中！", title: 'Twitter', target: '_blank', class: "btn btn-default", style: "background-color: #3EA7E8;" do %>
            <i class="fab fa-twitter" style="color:white"></i>
            <span style="color:white;">ツイート</span>
        <% end %>

        <%# コメント %>
        <div id="comments_form" class="mt-5">
            <%= render partial: 'comments/form', locals: { event: @event } %>
        </div>
        <div id="comments_area">
            <%= render partial: 'comments/index', locals: { event: @event, comments: @comments } %>
        </div>
        
    </div>
</div>