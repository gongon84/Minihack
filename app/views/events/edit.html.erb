<div class="container">
    <%= form_tag("/events/update") do %>
        <div class="form-group">
            <input name="id" class="form-control" id="id" type="hidden" value="<%= @event.id %>">
        </div>
        <div class="form-group">
            <label for="exampleInputEmail1">イベント名</label>
            <input name="title" class="form-control" id="title" value="<%= @event.title %>">
        </div>
        <div class="form-group">
            <label for="exampleInputPassword1">言語</label>
            <input name="skill" class="form-control" id="skill" value="<%= @event.skill %>">
        </div>
        <div class="form-group">
            <label for="exampleInputPassword1">募集人数</label>
            <input name="accept_num" class="form-control" id="accept_num" value="<%= @event.accept_num %>">
        </div>
        <div class="form-group">
            <label for="exampleInputPassword1">説明</label>
            <textarea class="form-control" name="description" id="description" style="height:100px;"><%= @event.description %></textarea>
        </div>
        <div class="form-group">
            <label for="exampleInputPassword1">URL(zoomなどの)</label>
            <input name="url" class="form-control" id="url" value="<%= @event.url %>">
        </div>
        <div class="form-group">
            <label for="exampleInputPassword1">作品URL</label>
            <input name="portfolio" class="form-control" id="portfolio" value="<%= @event.portfolio %>">
        </div>
        <div class="form-group">
            <label for="exampleInputPassword1">作品情報</label>
            <textarea name="portfolio_info" class="form-control" id="portfolio_info" style="height:100px;"><%= @event.portfolio_info %></textarea>
        </div>
        
        <div class="form-group">
        <label for="exampleInputPassword1">状態</label>
        <select name="status">
        <option value="募集中">募集中</option>
        <option value="開催中">開催中</option>
        <option value="終了">終了</option>
        </select>
        </div>

        <button type="submit" class="btn btn-primary">Submit</button>
    <% end %>
</div>