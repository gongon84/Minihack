<h3>編集</h3>

<% @user.errors.full_messages.each do |message| %>
    <div class="form-error">
        <h2 class="text-danger"><%= message %></h2>
    </div>
<% end %>


<%= form_with url: "/users/update", local: true, method: 'POST' do |f| %>

    <div>
        <%= f.label :email, 'メールアドレス' %>
        <%= f.text_field :email, value: @user.email %>
    </div>

    <div>
        <%= f.label :name, '名前' %>
        <%= f.text_field :name, value: @user.name %>
    </div>

    <div>
        <%= f.label :old, '年齢' %>
        <%= f.text_field :old, value: @user.old %>
    </div>

    <div>
        <%= f.label :profile, 'プロフィール' %>
        <%= f.text_area :profile, value: @user.profile %>
    </div>
    
        
    <div>        
        <%= f.submit "送信" %>
    </div>
<% end %>



