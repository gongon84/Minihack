<div class="user-show-page">
    <div class="main container">
        <%# プロフィール画像 %>
        <div>
            <%= image_tag "/assets/profile-icon.png", class: "profile-image" %>
        </div>
        <%# プロフィール文 %>
        <div class="main-profile text-center">
            <h2><%= @user.name %></h2>
            <% if @user.profile %>
            <h3 class="mt-5 p-3" style="background-color:#DDD; border-radius:10px; min-height:200px;"><%= safe_join(@user.profile.split("\n"), tag(:br)) %></h3>
            <% else %>
                <h3 class="mt-5 p-3" style="background-color:#DDD; border-radius:10px; height:140px;">プロフィールが入力していません</h3> 
            <% end %>
        </div>
        <% if current_user && current_user.id == @user.id %>
            <%= link_to("編集", "/users/#{@user.id}/edit", class: "btn btn-outline-secondary") %>
            <% if not @user.guest%>
                <%= link_to("削除", "/users/#{@user.id}/destroy", method: 'POST', class: "btn btn-outline-secondary",
                data: {confirm: "【確認】#{@user.name}を削除してよろしいですか？"}) %>
            <% end %>
        <% end %>
    </div>
</div>
